#!/usr/bin/env node

var mongoose = require('mongoose');
var Promise = require('bluebird');

var elastic = require('../../utils/elasticSearch');
var log = require('../../utils/logger').logger;

var orgMap = {};

var testElasticConnection = function () {
	return elastic.ping()
	.then( function () {
		log.info('ElasticSearch connection established...');
	})
	.catch( function (err) {
		log.error('Failed to establish ElasticSearch Connection');
		process.exit(0);
	});
};

var reindexOrg = function (org) {
	orgMap[org._id.toString()] = true;

	if (org.entries.length < 1) {
		log.info(`Skipping Org ${org._id} because it contains no entries`);
		return Promise.resolve(true);
	}

	log.info(`Reindexing Org ${org._id}...`);

	return elastic.deleteOrgIndex(org._id)
	.catch( function (err) {
		log.warn('Index did not previously exist');
		if (err.body.error.reason == 'no such index') {

			return true;
		}

		throw err;
	})
	.then( function () {
		return Promise.mapSeries(org.entries, function (entry) {
			return elastic.indexEntry(entry, org._id);
		})
	})
	.then( function () {
		log.verbose(`Re-indexed ${org.entries.length} entries from Org ${org._id}`);
	});
};


// Initialize mongo/mongoose connection and models
var db = require('../../db').init({performCheck: false})
.then( function () {
	// initialize elastic connection
	return testElasticConnection();
})
.then( function () {
    var Org = mongoose.model('Organization');

    // Get all Org Docs with entries references populated
    return Org.find({}).populate([
        {
            path: 'entries',
            model: 'Entry'
            // no need to populate Terms, the Elastic util/interface does that for us
        }
    ]).exec()
        .then(function (orgDocs) {
            return Promise.mapSeries(orgDocs, reindexOrg);
        })
        .then(function () {
            // query elastic for all indices
            elastic.getIndices()
			.then(function (indices) {
				return Promise.mapSeries(Object.keys(indices), function (indexName) {
                    if (indexName.includes("kt_")) {
                        indexName = indexName.slice(3);
                        if (!(indexName in orgMap)) {
                            //var temp = index.split("_")[1];
                            return elastic.deleteOrgIndex(indexName);
                        }
                    }
                });
			});
            // .then => iterate over the list and check if the org exists in the orgMap
            // if ( ! (id in orgMap) ) {}
            //		if not, delete the index
        })
})
.catch( function (err) {
	console.log(err);
	process.exit(0);
})
.then( function (org) {
	log.info('Re-indexing completed.');
	mongoose.disconnect();
});
